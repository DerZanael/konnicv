<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}

        {# boostrap #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        {% block csslocal %}{% endblock %}

        {# bootstrap #}
        <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
        <script defer src="{{ asset("lib/fontawesome/js/all.min.js") }}"></script>
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <main class="container">
        {% block body %}{% endblock %}
        </main>
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-3 mx-auto text-center">
                        <div class="dropdown">
                            <button type="button" id="lang-choice" class="btn btn-outline-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">{{ "app.language"|trans }} : {{ app_langs[app.request.locale].flag|raw }} {{ "app.locales.#{app.request.locale}"|trans }}</button>
                            <ul class="dropdown-menu" aria-labelledby="lang-choice">
                                {% for lang in app_langs %}
                                <li><a class="dropdown-item" href="{{ path("locale-switch", {lang: lang.trans_code}) }}">{{ lang.flag|raw }} {{ "app.locales.#{lang.trans_code}"|trans }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        {% block jslocal %}{% endblock %}
    </body>
</html>
